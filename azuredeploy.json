{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "OrgName": {
            "type": "string",
            "metadata": {
                "description": "Name of the organization or company name"
            }
        },
        "appRegistrationGuid": {
            "type": "string",
            "minLength": 36,
            "maxLength": 36,
            "metadata": {
                "description": "GUID of the App Registration"
            }
        },
        "appRegistrationKey": {
            "type": "string",
            "metadata": {
                "description": "Client Secret of the App Registration"
            }
        },
        "keyVaultName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24,
            "metadata": {
                "description": "Specifies the name of the key vault."
            }
        },
        "skuKeyVault": {
            "type": "string",
            "defaultValue": "standard",
            "allowedValues": [
                "standard",
                "premium"
            ],
            "metadata": {
                "description": "Specifies whether the key vault is a standard vault or a premium vault."
            }
        },
        "skuAppService": {
            "type": "string",
            "defaultValue": "Standard",
            "metadata": {
                "description": "The SKU of App Service Plan, by defaut is standard S1"
            }
        },
        "appServicePlanName": {
            "type": "string",
            "maxLength": 40
        },
        "appServiceName": {
            "type": "string",
            "maxLength": 60
        }
    },
    "variables": {
        "zipArtifactsUrl": "https://github.com/bb-froggy/gk-scepman/raw/master/dist/Artifacts.zip",
        "keys": [
            "Get",
            "List",
            "Update",
            "Create",
            "Import",
            "Delete",
            "Recover",
            "Backup",
            "Restore",
            "Decrypt",
            "Encrypt",
            "UnwrapKey",
            "WrapKey",
            "Verify",
            "Sign"
        ],
        "secrets": [
            "Get",
            "List",
            "Set",
            "Delete",
            "Recover",
            "Backup",
            "Restore"
        ],
        "certificates": [
            "Get",
            "List",
            "Update",
            "Create",
            "Import",
            "Delete",
            "Recover",
            "Backup",
            "Restore",
            "ManageContacts",
            "ManageIssuers",
            "GetIssuers",
            "ListIssuers",
            "SetIssuers",
            "DeleteIssuers"
        ]
    },
    "functions": [],
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[parameters('keyVaultName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-10-01",
            "tags": {},
            "scale": null,
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]"
            ],
            "properties": {
                "tenantId": "[subscription().tenantId]",
                "enabledForDeployment": false,
                "enabledForTemplateDeployment": false,
                "enabledForDiskEncryption": false,
                "sku": {
                    "name": "[parameters('skuKeyVault')]",
                    "family": "A"
                },
                "accessPolicies": [
                    {
                        "objectId": "[reference(concat('Microsoft.Web/sites/', parameters('appServiceName')), '2016-08-01', 'Full').identity.principalId]",
                        "tenantId": "[subscription().tenantId]",
                        "permissions": {
                            "keys": "[variables('keys')]",
                            "secrets": "[variables('secrets')]",
                            "certificates": "[variables('certificates')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('AppServicePlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[resourceGroup().location]",
            "apiVersion": "2014-06-01",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "name": "[parameters('AppServicePlanName')]",
                "sku": "[parameters('skuAppService')]",
                "workerSize": 0,
                "numberOfWorkers": 1
            }
        },
        {
            "apiVersion": "2016-08-01",
            "type": "Microsoft.Web/sites",
            "kind": "app",
            "name": "[parameters('appServiceName')]",
            "location": "[resourceGroup().location]",
            "identity": {
                "principalId": "",
                "tenantId": "",
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
                "siteConfig": {
                    "remotedebuggingenabled": true,
                    "remoteDebuggingVersion": "VS2017",
                    "appSettings": [
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "[variables('zipArtifactsUrl')]"
                        },
                        {
                            "name": "AppConfig:AuthConfig:ApplicationId",
                            "value": "[parameters('appRegistrationGuid')]"
                        },
                        {
                            "name": "AppConfig:AuthConfig:ApplicationKey",
                            "value": "[parameters('appRegistrationKey')]"
                        },
                        {
                            "name": "AppConfig:AuthConfig:TenantName",
                            "value": "[subscription().tenantId]"
                        },
                        {
                            "name": "AppConfig:BaseUrl",
                            "value": "[concat('https://', parameters('appServiceName'),'.azurewebsites.net/')]"
                        },
                        {
                            "name": "AppConfig:DebugMode",
                            "value": "false"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:KeyVaultURL",
                            "value": "[concat('https://', parameters('keyVaultName'),'.vault.azure.net/')]"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:RootCertificateConfig:CertificateName",
                            "value": "SCEPman-Device-Root-CA-V1"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:RootCertificateConfig:Subject",
                            "value": "[concat('CN=SCEPman-Device-Root-CA-V1, ', 'OU=',subscription().tenantId, ', ', 'O=', parameters('OrgName'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]"
            ]
        }
    ],
    "outputs": {}
}
